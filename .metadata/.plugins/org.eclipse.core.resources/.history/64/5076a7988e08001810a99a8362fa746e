package Chapter21;

public class MyThread extends Thread {
    private String msg;
    public MyThread(String s) {
        msg = s;
    }
    public void run() {
        System.out.println(msg);
    }
}

public static void main(String[] args) {
    String s = "Hello world.";
    MyThread t = new MyThread(s);
    t.start();
}